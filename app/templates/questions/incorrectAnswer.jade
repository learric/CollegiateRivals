.chalkboard_bg(ng-init="incorrectBuzzer()")
    .chalkboard_header
        active-team-headline
        h3 Incorrect!
    .chalkboard_content
        .question_container
            .animated.infinite.pulse
                span.ion-close-circled.assertive.wrong_answer_x
            h3 the correct answer is
            h3 {{ question.correctAnswer.answers[3] }}


    .chalkboard_buttons
        .row
            .col.col-25.col-offset-75.animated.rubberBand
                button.button.button-balanced(ng-click='question.incorrectAnswer()') Next
